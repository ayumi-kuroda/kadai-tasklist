<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
    <%= link_to 'Logout', logout_path, method: :delete %>
  <div>
    <%= render 'form', task: @task %>
  </div>
  <div>
    <%= render 'tasks/tasks', tasks: @tasks %>
  </div>

<% else %>
  <div>
    <div>
      <h1>TASK LIST</h1>
        <ul>
          <li><%= link_to 'Sign up now!', signup_path %></li>
          <li><%= link_to 'Login', login_path %></li>
        </ul>
    </div>
  </div>
<% end %>